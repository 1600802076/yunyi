<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.chen.dao.mysql.QuestionDao">
    <insert id="save">
        insert into question(question_name, questioner_id, question_content, creation_time) values(#{questionName}, #{questioner.id}, #{questionContent}, now())
    </insert>
    <select id="getQuestions" resultType="cn.chen.model.Question" parameterType="cn.chen.model.Question">
        select * from question
    </select>
    <select id="getQuestionById" resultType="cn.chen.model.Question" parameterType="cn.chen.model.Question">
        select * from question where id = #{id}
    </select>
    <resultMap id="getQuestion" type="cn.chen.model.Question">
        <id property="id" column="id" />

    </resultMap>
</mapper>